@model IEnumerable<LateOS.Models.tbCategoria>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

<li class="dropdown" style="list-style: none;">
    <a class="dropdown-toggle count-info  btn btn-primary" data-toggle="dropdown" href="#">
       Categorías  <span class="label label-warning"></span>
    </a>
    <ul class="dropdown-menu dropdown-messages">
        @foreach (var item in Model)
        {


            <li>
                <div class="dropdown-messages-box">
                    <div class="media-body">
                        @Html.ActionLink(item.cat_Descripcion, "Index", "Ventas", new { id = item.cat_Id }, null)
                    </div>
                </div>
            </li>
            <li class="divider"></li>


        }
    </ul>
</li>
<br>
<div class="row">
    <div class="col-lg-12 text-center">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 101 }, new { @style = "width: 100px;height: 100px; border-radius: 50px;  font-size:65px;", @class = "btn btn-primary btn-circle btn-lg fa fa-headphones", @title = "Tecnología" })
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 104 }, new { @style = "width: 100px;height: 100px; border-radius: 50px; font-size:65px;", @class = "btn btn-success btn-circle btn-lg fa fa-tags", @title = "Moda" })
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 105 }, new { @style = "width: 100px;height: 100px; border-radius: 50px; font-size:60px;", @class = "btn btn-info btn-circle btn-lg fa fa-home", @title = "Hogar" })
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 119 }, new { @style = "width: 100px;height: 100px; border-radius: 50px; font-size:60px;", @class = "btn btn-warning btn-circle btn-lg fa fa-futbol-o", @title = "Deporte" })
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 120 }, new { @style = "width: 100px;height: 100px; border-radius: 50px; font-size:60px;", @class = "btn btn-danger btn-circle btn-lg fa fa-gamepad", @title = "Juegos" })
                &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                @Html.ActionLink(" ", "Index", "Ventas", new { @id = 127 }, new { @style = "width: 100px;height: 100px; border-radius: 50px; font-size:65px;", @class = "btn btn-primary btn-circle btn-lg fa fa-star", @title = "Nuevo" })
            </div>
        </div>
    </div>

    <div class="col-lg-9 col-xs-offset-1">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <div class="carousel slide" id="carousel1">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img alt="image" class="img-responsive" src="~/Content/img/p_big3.jpg">
                        </div>
                        <div class="item">
                            <img alt="image" class="img-responsive" src="~/Content/img/p_big1.jpg">
                        </div>
                        <div class="item ">
                            <img alt="image" class="img-responsive" src="~/Content/img/p_big2.jpg">
                        </div>

                    </div>
                    <a data-slide="prev" href="#carousel1" class="left carousel-control">
                        <span class="icon-prev"></span>
                    </a>
                    <a data-slide="next" href="#carousel1" class="right carousel-control">
                        <span class="icon-next"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>

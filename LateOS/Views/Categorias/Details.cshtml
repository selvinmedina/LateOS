@model LateOS.Models.tbCategoria

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "pull-right btn btn-primary" })
            <h2>Detalle</h2>
        </div>

        <div class="ibox-content">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.cat_Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.cat_Descripcion)
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.cat_Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </p>
        </div>
    </div>

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Auditoría</h2>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            <td>@Html.DisplayFor(model => model.cat_UsuarioCrea)</td>
                            <td>@Html.DisplayFor(model => model.cat_FechaCrea)</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>@Html.DisplayFor(model => model.cat_UsuarioModifica)</td>
                            <td>@Html.DisplayFor(model => model.cat_FechaModifica)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<LateOS.Models.tbCliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
	        @Html.ActionLink("Registrar ", "Create", null, new {@class="btn btn-primary pull-right" })
	        <h2>Index</h2>
        </div>
        <div class="ibox-content">
            <table class="table table-striped table-bordered dataTable" id="tblCliente">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Identidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_FechaNacimiento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Sexo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Telefono)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Correo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                    <tr data-id="@item.clte_Id">
                        <td>
                            <button class="btn btn-primary btn-xs" id="btnDesplegarDireccion">+</button>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Identidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_FechaNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.clte_Correo)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.clte_Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.clte_Id }, new { @class = "btn btn-default btn-xs" })
                        </td>
                    </tr>
                        <tr style="display:none" id="fila-@item.clte_Id">
                            <td></td>
                            <td colspan="8">@Html.Partial("_IndexClienteDireccion", item.tbClienteDireccion, new ViewDataDictionary {{"idCliente",item.clte_Id}})</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model LateOS.Models.tbCliente

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
	        @Html.ActionLink("Regresar", "Index", null, new {@class="pull-right" })
	        <h2>Details</h2>
        </div>

        <div class="ibox-content">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.clte_Identidad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Identidad)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_Apellido)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Apellido)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_FechaNacimiento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_FechaNacimiento)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_Sexo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Sexo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_Telefono)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Telefono)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.clte_Correo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.clte_Correo)
                </dd>
            </dl>
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.clte_Id }, new {@class="btn btn-primary" }) 
                @Html.ActionLink("Cancelar", "Index", null, new {@class="btn btn-default" })
            </p>
        </div>
    </div>

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Auditoría</h2>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            <td>@Html.DisplayFor(model => model.tbUsuarios.usu_NombreUsuario)</td>
                            <td>@Html.DisplayFor(model => model.clte_FechaCrea)</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>@Html.DisplayFor(model => model.tbUsuarios1.usu_NombreUsuario)</td>
                            <td>@Html.DisplayFor(model => model.clte_FechaModifica)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@model LateOS.Models.tbEntrada

@{
    ViewBag.Title = "Editar Entradas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "pull-right" })
            <h2>Editar Entradas</h2>
        </div>

        @using (Html.BeginForm())
        {
            <div class="ibox-content">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ent_Id)
                    @Html.HiddenFor(model => model.ent_UsuarioCrea)
                    @Html.HiddenFor(model => model.ent_FechaCrea)
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "prod_Id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("prod_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ent_Existencia, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ent_Existencia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ent_Existencia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ent_Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ent_Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ent_Cantidad, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ent_FechaEntrada, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ent_FechaEntrada, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ent_FechaEntrada, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h2>Auditoría</h2>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <table class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Usuario</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Creado</td>
                                    <td>@Html.DisplayFor(model => model.tbUsuarios.usu_NombreUsuario)</td>
                                    <td>@Html.DisplayFor(model => model.ent_FechaCrea)</td>
                                </tr>
                                <tr>
                                    <td>Modificado</td>
                                    <td>@Html.DisplayFor(model => model.tbUsuarios1.usu_NombreUsuario)</td>
                                    <td>@Html.DisplayFor(model => model.ent_FechaModifica)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


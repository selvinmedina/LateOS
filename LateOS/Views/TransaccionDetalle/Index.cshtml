@model IEnumerable<LateOS.Models.tbTransaccionDetalle>

@{
    ViewBag.Title = "Listado Transacción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    
                    <h2>Listado Transacción</h2>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            @*DataTables_Table_0*@
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable dtr-inline" id="tblTraDet" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 210px;">@Html.DisplayNameFor(model => model.trad_Descripcion)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 260px;">@Html.DisplayNameFor(model => model.trad_Fecha)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.fact_Id)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 180px;">@Html.DisplayNameFor(model => model.estt_Id)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr class="gradeA odd" role="row" data-id="@item.trad_Id">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.trad_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.trad_Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbFactura.fact_Codigo)
                                            </td>
                                            <td>
                                              
                                                @{
                                                    string Descripcion = "";
                                                    switch (item.tbEstadoTransaccion.estt_Descripcion)
                                                    {
                                                        case "E":
                                                            Descripcion = "Enviado";
                                                            break;
                                                        case "C":
                                                            Descripcion = "Camino";
                                                            break;
                                                        case "R":
                                                            Descripcion = "Recibo";
                                                            break;
                                                        case "A":
                                                            Descripcion = "Almacen";
                                                            break;
                                                        default:
                                                            Descripcion = "Hola";
                                                            break;
                                                    }
                                                }
                                                @Descripcion
                                            </td>
                                            <td>
                                               
                                                @Html.ActionLink("Detalles", "Details", new { id = item.trad_Id }, new { @class = "btn btn-info btn-xs" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                           
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

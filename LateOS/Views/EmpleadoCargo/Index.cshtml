@model IEnumerable<LateOS.Models.tbEmpleadoCargo>

@{
    ViewBag.Title = "Listado Cargos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    @Html.ActionLink("Registrar Cargo ", "Create", null, new { @class = "btn btn-primary pull-right" })
                    <h2>Listado Cargo</h2>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            @*DataTables_Table_0*@
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable dtr-inline" id="tblCliente" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 210px;">@Html.DisplayNameFor(model => model.empc_Descripcion)</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 210px;">@Html.DisplayNameFor(model => model.tbEmpleadoDepartamento.empd_Descripcion)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128px;">Acción</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                   @foreach (var item in Model)
                                   {
                                    <tr class="gradeA odd" role="row" data-id="@item.empc_Id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.empc_Descripcion)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbEmpleadoDepartamento.empd_Descripcion)
                                        </td>
                                            <td width="10%">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.empc_Id }, new { @class = "btn btn-primary btn-xs" })
                                                @Html.ActionLink("Detalles", "Details", new { id = item.empc_Id }, new { @class = "btn btn-info btn-xs" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<LateOS.Models.tbListadoPrecio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-2">
                            <h2>Listado Precio/Detalle</h2>
                        </div>
                        <div class="col-md-10">
                            @Html.ActionLink("Registrar Listado Precio ", "Create", null, new { @class = "btn btn-primary pull-right" })
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            @*DataTables_Table_0*@
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable dtr-inline" id="tblListadoPrecio" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 20px;">+ / -</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 260px;">@Html.DisplayNameFor(model => model.lip_Descripcion)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.lip_Prioridad)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.lip_EsActivo)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.lip_FechaInicio)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.lip_FechaFin)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128px;">Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeA odd" role="row" data-id="@item.lip_Id">
                                            <td width="5%">
                                                <button class="btn btn-primary btn-xs center-block" id="btnDesplegarLisPreDet">+</button>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lip_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lip_Prioridad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lip_EsActivo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lip_FechaInicio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lip_FechaFin)
                                            </td>
                                            <td width="10%">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.lip_Id }, new { @class = "btn btn-primary btn-xs" })
                                                @Html.ActionLink("Detalles", "Details", new { id = item.lip_Id }, new { @class = "btn btn-info btn-xs" })
                                            </td>
                                        </tr>
                                        <tr style="display:none" id="fila-@item.lip_Id">
                                            <td style="visibility: hidden"></td>                                            
                                            <td colspan="5">@Html.Partial("_IndexListadoPrecioDetalle", item.tbListadoPrecioDetalle, new ViewDataDictionary { { "idListadoPrecio", item.lip_Id } })</td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>   
                                            <td style="visibility: hidden"></td>                                         
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* MODALES *@

<div class="modal fade" id="EditarListadoPrecioDetalle" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-laptop modal-icon"></i>
                <h4 class="modal-title">Editar Listado Precio Detalle</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_EditListadoPrecioDetalle", new LateOS.Models.tbListadoPrecioDetalle())
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnUpdateListPrecDet">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

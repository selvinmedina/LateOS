@model IEnumerable<LateOS.Models.tbProveedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
	@Html.ActionLink("Registrar ", "Create", null, new {@class="btn btn-primary pull-right" })
	<h2>Listado Proveedores</h2>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered dataTable">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.prov_Descripcion)
        </th>    
        <th>Acción</th>        
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.prov_Descripcion)
        </td>        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.prov_Id }, new {@class="btn btn-primary btn-xs"})
            @Html.ActionLink("Detalles", "Details", new { id=item.prov_Id }, new {@class="btn btn-info btn-xs"})
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
</div>

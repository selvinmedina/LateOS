@model IEnumerable<LateOS.Models.tbFactura>

@{
    ViewBag.Title = "Listado Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Listado Factura</h5>
                        </div>
                        <div class="col-md-10">
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            @*DataTables_Table_0*@
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable dtr-inline" id="tblFactura" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 20px;">+ / -</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 260px;">@Html.DisplayNameFor(model => model.fact_Codigo)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.fact_Fecha)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.tbCliente.clte_Nombre)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.tbCliente.clte_Apellido)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.tbCliente.clte_Identidad)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">Tipo Pago</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.tbFormaPago.forp_Descripcion)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128px;">Accion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeA odd" role="row" data-id="@item.fact_Id">
                                            <td width="5%">
                                                <button class="btn btn-primary btn-xs center-block" id="btnDesplegarSubC">+</button>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact_Codigo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact_Fecha)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbCliente.clte_Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbCliente.clte_Apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbCliente.clte_Identidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbTipoPago.tipp_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbFormaPago.forp_Descripcion)
                                            </td>
                                            <td width="10%">  
                                                @Html.ActionLink("Detalles", "Details", new { id = item.fact_Id }, new { @class = "btn btn-info btn-xs" })
                                            </td>
                                        </tr>
                                        <tr style="display:none" id="fila-@item.fact_Id">
                                            <td style="visibility: hidden"></td>
                                            <td colspan="5">@Html.Partial("_IndexFacturaDetalle", item.tbFacturaDetalle, new ViewDataDictionary { { "idFacturaDetalle", item.fact_Id } })</td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

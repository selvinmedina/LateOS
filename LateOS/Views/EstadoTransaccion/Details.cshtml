@model LateOS.Models.tbEstadoTransaccion

@{
    ViewBag.Title = "Detalles Estado Transaccion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "pull-right" })
            <h2>Detalles Estado Transaccion</h2>
        </div>

        <div class="ibox-content">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.estt_Descripcion)
                </dt>

                <dd>
                    @{
                        string Descripcion = "";
                        switch (Model.estt_Descripcion)
                        {
                            case "E":
                                Descripcion = "Enviado";
                                break;
                                case "C":
                                Descripcion = "Camino";
                                break;
                            case "R":
                                Descripcion = "Recibo";
                                break;
                            case "A":
                                Descripcion = "Almacen";
                                break;
                            default:
                                Descripcion = "Hola";
                                break;
                        }
                    }
                    @Descripcion      
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Editar", "Edit", new { id = Model.estt_Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-danger" })
            </p>
        </div>
    </div>
</div>
<div class="ibox float-e-margins">
    <div class="ibox-title">
        <h2>Auditoría</h2>
    </div>
    <div class="ibox-content">
        <div class="form-horizontal">
            <table class="table table-striped table-bordered dataTable">
                <thead>
                    <tr>
                        <th>Acción</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Creado</td>
                        <td>@Html.DisplayFor(model => model.tbUsuarios.usu_NombreUsuario)</td>
                        <td>@Html.DisplayFor(model => model.estt_FechaCrea)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>@Html.DisplayFor(model => model.tbUsuarios1.usu_NombreUsuario)</td>
                        <td>@Html.DisplayFor(model => model.estt_FechaModifica)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


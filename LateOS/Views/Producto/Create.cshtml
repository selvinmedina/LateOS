@model LateOS.Models.tbProducto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "pull-right" })
            <h2>Create</h2>
        </div>

        @using (Html.BeginForm("Create", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="ibox-content">
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.prod_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.prod_Descripcion, new { htmlAttributes = new { @class = "form-control", @required="true" } })
                            @Html.ValidationMessageFor(model => model.prod_Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"> Proveedor</label>
                        <div class="col-md-10">
                            @Html.DropDownList("prov_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.prov_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"> Subcategoría</label>
                        <div class="col-md-10">
                            @Html.DropDownList("subc_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.subc_Id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.prod_Precio, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.prod_Precio, new { htmlAttributes = new { @class = "form-control", @required = "true", @type = "number", @step ="any" } })
                            @Html.ValidationMessageFor(model => model.prod_Precio, "", new {@class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-5">Seleccionar la imagen principal</label>
                        <div class="col-md-7">
                            <input type="file" required accept="image/*" class="col-md-10" name="imgProducto" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-5">Seleccionar las imagenes para el carrusel</label>
                        <div class="col-md-7">
                            <input type="file" class="col-md-10" accept="image/*" required multiple name="imgProductosInfo" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


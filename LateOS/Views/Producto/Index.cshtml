@model IEnumerable<LateOS.Models.tbProducto>

@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                        <div class="col-md-2">
                            <h5>Productos</h5>
                        </div>
                        <div class="col-md-10">
                            @Html.ActionLink("Registrar ", "Create", null, new { @class = "btn btn-primary pull-right" })
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            @*DataTables_Table_0*@
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable dtr-inline" id="tblProducto" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th style="width: 20px;"></th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 260px;">@Html.DisplayNameFor(model => model.prod_Codigo)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.prod_Descripcion)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.prod_Precio)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">@Html.DisplayNameFor(model => model.prod_Img)</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">Proveedor</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 235px;">Subcategoria</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeA odd" role="row" data-id="@item.prod_Id">
                                            <td width="5%">
                                                <button class="btn btn-primary btn-xs center-block" id="btnDesplegarProd">+</button>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prod_Codigo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prod_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.prod_Precio)
                                            </td>
                                            <td>
                                                <img width="200" height="150" src="../../@item.prod_Img" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbProveedor.prov_Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbSubCategoria.subc_Descripcion)
                                            </td>

                                            <td width="10%">
                                                @Html.ActionLink("Editar", "Edit", new { id = item.prod_Id }, new { @class = "btn btn-primary btn-xs" })
                                                <br />
                                                <br />
                                                @Html.ActionLink("Detalles", "Details", new { id = item.prod_Id }, new { @class = "btn btn-danger btn-xs" })
                                            </td>
                                        </tr>
                                        <tr style="display:none" id="fila-@item.prod_Id" class="content-align-centers">
                                            <td style="visibility: hidden"></td>
                                            <td colspan="6">
                                                @Html.Partial("_IndexProductoImagen", item.tbProductoImagen, new ViewDataDictionary { { "idProducto", item.prod_Id } })
                                                @using (Html.BeginForm("CrearImagenProducto", "Producto", new { idProd = item.prod_Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                {
                                                    <label>Agregar un nuevo archivo</label>
                                                    <input type="file" name="agregarImagenproducto" accept="image/*" required /> <br />
                                                    <input type="submit" value="Guardar" class="btn btn-outline btn-primary" />
                                                }
                                            </td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                            <td style="visibility: hidden"></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

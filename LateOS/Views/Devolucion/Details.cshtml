@model LateOS.Models.tbDevolucion

@{
    ViewBag.Title = "Detalles de Devoluciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
	@Html.ActionLink("Regresar", "Index", null, new {@class="pull-right" })
	<h2>Detalles de Devoluciones</h2>
</div>

<div class="ibox-content">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.dev_Razon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dev_Razon)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dev_Fecha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dev_Fecha)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.tbFactura.fact_Codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbFactura.fact_Codigo)
        </dd>

    </dl>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.dev_Id }, new {@class="btn btn-primary" }) 
    @Html.ActionLink("Cancelar", "Index", null, new {@class="btn btn-danger" })
</p>
</div>

     <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Auditoría</h2>
        </div>
        <div class="ibox-content">
            <div class="form-horizontal">
                <table class="table table-striped table-bordered dataTable">
                    <thead>
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Creado</td>
                            <td>@Html.DisplayFor(model => model.tbUsuarios.usu_NombreUsuario)</td>
                            <td>@Html.DisplayFor(model => model.dev_FechaCrea)</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>@Html.DisplayFor(model => model.tbUsuarios1.usu_NombreUsuario)</td>
                            <td>@Html.DisplayFor(model => model.dev_FechaModifica)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

@model IEnumerable<LateOS.Models.tbDevolucion>

@{
    ViewBag.Title = "Listado de Devoluciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
	@Html.ActionLink("Registrar ", "Create", null, new {@class="btn btn-primary pull-right" })
	<h2>Listado de Devoluciones</h2>
</div>
<div class="ibox-content">
<table class="table table-striped table-bordered dataTable">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dev_Razon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dev_Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbFactura.fact_Codigo)
        </th>
        <th>Acciones</th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dev_Razon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dev_Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbFactura.fact_Codigo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.dev_Id }, new {@class="btn btn-primary btn-xs"})
            @Html.ActionLink("Detalles", "Details", new { id=item.dev_Id }, new {@class="btn btn-info btn-xs"})
        </td>
    </tr>
}
</tbody>
</table>
</div>
</div>
</div>
